        "active": true,
        "tosidebar": true,
        "console": false,
        "tostatus": false,
        "complete": "payload",
        "targetType": "msg",
        "statusVal": "",
        "statusType": "auto",
        "x": 700,
        "y": 280,
        "wires": []
    },
    {
        "id": "check_alert",
        "type": "switch",
        "z": "tab_ar_sp",
        "name": "É Critico?",
        "property": "payload[0].fields.aqi",
