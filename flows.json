[
    {
        "id": "tab_ar_sp",
        "type": "tab",
        "label": "Qualidade do Ar SP",
        "disabled": false,
        "info": "Fluxo para capturar dados da API OpenWeather e do MQTT (Wokwi), processar e enviar para InfluxDB."
    },
    {
        "id": "inject_api",
        "type": "inject",
        "z": "tab_ar_sp",
        "name": "Disparo 10min",
        "props": [
            {
                "p": "payload"
            }
        ],
        "repeat": "600",
        "crontab": "",
        "once": true,
        "onceDelay": 0.1,
        "topic": "",
        "payload": "",
        "payloadType": "date",
        "x": 140,
        "y": 120,
        "wires": [
            [
                "http_openweather"
            ]
        ]
    },
    {
        "id": "http_openweather",
        "type": "http request",
        "z": "tab_ar_sp",
        "name": "API OpenWeather (Poluição)",
        "method": "GET",
        "ret": "obj",
        "paytoqs": "ignore",
        "url": "http://api.openweathermap.org/data/2.5/air_pollution?lat=-23.5505&lon=-46.6333&appid=3fe93967aefc698f865170283cf0d0d2",
        "tls": "",
        "persist": false,
        "proxy": "",
        "insecureHTTPParser": false,
        "authType": "",
        "senderr": false,
        "headers": [],
        "x": 380,
        "y": 120,
        "wires": [
            [
                "func_processa_api"
            ]
        ]
    },
    {
        "id": "func_processa_api",
        "type": "function",
        "z": "tab_ar_sp",
        "name": "Avaliação Qualidade (Regra)",
        "func": "let aqi_final = 50;\nlet pm25_final = 12;\nlet status = \"Teste Inicial\";\nlet cor = \"Azul\";\n\nif (msg.payload && msg.payload.list && msg.payload.list[0]) {\n    let val = msg.payload.list[0].main.aqi;\n    let part = msg.payload.list[0].components.pm2_5;\n    \n    // Verifica se o valor é um número válido\n    if (val !== undefined && !isNaN(parseFloat(val))) {\n        aqi_final = parseFloat(val);\n        pm25_final = parseFloat(part);\n        \n        // Regra de Negócio (Semáforo)\n        if (aqi_final <= 2) {\n            status = \"Bom\";\n            cor = \"Verde\";\n        } else if (aqi_final == 3) {\n            status = \"Moderado\";\n            cor = \"Amarelo\";\n        } else {\n            status = \"Ruim\";\n            cor = \"Vermelho\";\n        }\n    }\n}\n\nmsg.payload = {\n    measurement: \"qualidade_ar_sp\",\n    tags: {\n        fonte: \"node_red_api\",\n    },\n    fields: {\n        aqi: aqi_final,\n        pm2_5: pm25_final,\n        status_desc: status,\n        cor_semaforo: cor\n    }\n};\n\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 670,
        "y": 120,
        "wires": [
            [
                "debug_api",
                "1ffcb3921e6e9659"
            ]
        ]
    },
    {
        "id": "mqtt_in_sensor",
        "type": "mqtt in",
        "z": "tab_ar_sp",
        "name": "Recebe ESP32",
        "topic": "sp/sensor/qualidade",
        "qos": "1",
        "datatype": "auto-detect",
        "broker": "broker_mosquitto",
        "nl": false,
        "rap": true,
        "rh": 0,
        "inputs": 0,
        "x": 140,
        "y": 280,
        "wires": [
            [
                "func_processa_sensor"
            ]
        ]
    },
    {
        "id": "func_processa_sensor",
        "type": "function",
        "z": "tab_ar_sp",
        "name": "Filtra Dados Arduino",
        "func": "let aqi_sensor = msg.payload.aqi;\nlet local = msg.payload.local;\n\n// Regra de Negócio para o Sensor Local\n// Supondo escala AQI padrão (0-500)\nlet status = \"Bom\";\nif (aqi_sensor > 50 && aqi_sensor <= 100) status = \"Moderado\";\nif (aqi_sensor > 100) status = \"Ruim\";\n\nmsg.payload = [\n    {\n        measurement: \"qualidade_ar_sp\",\n        tags: {\n            fonte: \"arduino_virtual\",\n            local: local\n        },\n        fields: {\n            aqi: aqi_sensor,\n            status_desc: status\n        }\n    }\n];\n\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 360,
        "y": 280,
        "wires": [
            [
                "debug_sensor",
                "influx_db_out",
                "check_alert"
            ]
        ]
    },
    {
        "id": "debug_api",
        "type": "debug",
        "z": "tab_ar_sp",
        "name": "Debug API",
        "active": true,
        "tosidebar": true,
        "console": false,
        "tostatus": false,
        "complete": "payload",
        "targetType": "msg",
        "statusVal": "",
        "statusType": "auto",
        "x": 950,
        "y": 120,
        "wires": []
    },
    {
        "id": "debug_sensor",
        "type": "debug",
        "z": "tab_ar_sp",
